@model Snippit.Models.ViewModels.SnippitViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LanguageId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(item => item.Title)
            </td>
            <td>
                @Html.DisplayFor(item => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(item => item.Description)
            </td>
            <td>
                @Html.DisplayFor(item => item.Content)
            </td>
            <td>
                @Html.DisplayFor(item => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(item => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(item => item.LanguageId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model.AuthorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@Model.AuthorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@Model.AuthorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
